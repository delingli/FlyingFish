<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_19"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_complate_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_51"
        android:text="2020-01-20"
        android:textColor="@color/text_color4_666666"
        android:textSize="@dimen/dp_15" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_9">

        <View
            android:id="@+id/view_line_bg"
            android:layout_width="@dimen/dp_3"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/text_color_3476f9" />

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/delay"
            android:visibility="invisible" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_9">

        <TextView
            android:id="@+id/tv_phase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_3476f9"
            android:textSize="@dimen/dp_15"
            android:visibility="gone"
            tools:text="前期审批" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_22"
            android:drawableLeft="@drawable/choice"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:textColor="@color/text_color_3476f9"
            android:textSize="@dimen/dp_15"
            android:visibility="visible"
            tools:text="qqqqqqqqqqqqqqqqq " />
    </FrameLayout>

</LinearLayout>
